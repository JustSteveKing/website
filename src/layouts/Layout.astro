---
import { ViewTransitions } from 'astro:transitions';
import {
	SITE_TITLE
} from './../config';
import SocialLinks from '../components/SocialLinks.astro';

interface Props {
	title?: string;
}

const { title } = Astro.props;

const date: Date = new Date();
---

<!doctype html>
<html lang="en" class="h-full antialiased" transition:animate="none">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ?? SITE_TITLE}</title>

		<ViewTransitions />
	</head>
	<body class="h-full bg-zinc-50 dark:bg-black">

		<header class="py-10 fixed w-full z-50 bg-zinc-50 dark:bg-black">
			<nav class="h-full flex justify-center space-x-8 text-sm font-medium text-gray">
				<a href="/" class="flex underline">Home</a>
				<a href="/about" class="flex ">About</a>
				<a href="/talks" class="flex ">Talks</a>
				<a href="/articles" class="flex ">Articles</a>
				<a href="/uses" class="flex ">Uses</a>
				<a href="/now" class="flex ">Now</a>
			</nav>
		</header>

		<main class="py-48" transition:animate="morph">
			<slot />
		</main>

		<footer>
			<div class="mx-auto max-w-7xl px-6 py-12 md:flex md:items-center md:justify-between lg:px-8">
				<div class="flex justify-center space-x-6 md:order-2">
					<SocialLinks />
				</div>
				<div class="mt-8 md:order-1 md:mt-0">
					<p class="text-center text-xs leading-5 text-gray-500">
						&copy; {date.getFullYear()} {SITE_TITLE}. All rights reserved.
					</p>
				</div>
			</div>
		</footer>
		
	</body>
</html>
